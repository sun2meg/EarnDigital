<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myapp.monarch.earndigital">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/Mon_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.myapp.monarch.earndigital.ContactActivity"
            android:exported="true" />
        <activity
            android:name="com.myapp.monarch.earndigital.EmailPasswordActivity"
            android:exported="true" />
        <activity
            android:name="com.myapp.monarch.earndigital.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.myapp.monarch.earndigital.AgreeActivity"
            android:exported="true"></activity>
        <activity
            android:name="com.myapp.monarch.earndigital.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.myapp.monarch.earndigital.BasicActivity"
            android:exported="true" />
        <activity
            android:name="com.myapp.monarch.earndigital.Welcome"
            android:exported="true" />
        <activity
            android:name="com.myapp.monarch.earndigital.AboutActivity"
            android:exported="true" />
        <activity
            android:name="com.myapp.monarch.earndigital.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.myapp.monarch.earndigital.SettingsActivity"
            android:parentActivityName="com.myapp.monarch.earndigital.ChoiceSelection"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.myapp.monarch.earndigital.NoInternetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name="com.myapp.monarch.earndigital.ChoiceSelection"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/monAppID" />
        <meta-data
            android:name="com.google.android.gms.ads.flag.OPTIMIZE_INITIALIZATION"
            android:value="true" />
        <meta-data
            android:name="com.google.android.gms.ads.flag.OPTIMIZE_AD_LOADING"
            android:value="true" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.myapp.monarch.earndigital.DailyCheckins"
            android:parentActivityName="com.myapp.monarch.earndigital.ChoiceSelection"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myapp.monarch.earndigital.ChoiceSelection" />
        </activity>
        <activity
            android:name="com.myapp.monarch.earndigital.LuckyWheel"
            android:parentActivityName="com.myapp.monarch.earndigital.ChoiceSelection"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myapp.monarch.earndigital.ChoiceSelection" />
        </activity>
        <activity
            android:name="com.myapp.monarch.earndigital.Instructions"
            android:parentActivityName="com.myapp.monarch.earndigital.ChoiceSelection"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myapp.monarch.earndigital.ChoiceSelection" />
        </activity>
        <activity
            android:name="com.myapp.monarch.earndigital.Redeem"
            android:parentActivityName="com.myapp.monarch.earndigital.ChoiceSelection"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myapp.monarch.earndigital.ChoiceSelection" />
        </activity>
        <activity
            android:name="com.myapp.monarch.earndigital.RedeemPayTm"
            android:parentActivityName="com.myapp.monarch.earndigital.Redeem"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.myapp.monarch.earndigital.RedeemPayTm2"
            android:parentActivityName="com.myapp.monarch.earndigital.Redeem"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>